<% @result.each do |user| %>
	<% @user = user %>
	<li class="list-group-item d-flex justify-content-between align-items-center">
		<%= link_to user.name, index_path(user_id: @user.id) %>
		<% if current_user.following?(@user) %>
			<%= render partial: "unfollow_link" %>
		<% else %>
			<%= render partial: "follow_link" %>
		<% end %>
	</li>
<% end %>
<div class="d-flex justify-content-center"><%= paginate @result, remote: true, window: 1 %></div>