<div class="card" style="padding-bottom: 15px;">
  <div class="card-body">
    <div class="row">
      <div style="width: 780px; height: 400px; padding-left: 30px; padding-top: 15px;">
        <% if !@pictures.empty? %>
          <%= render 'image_show' %>
        <% else %>
        <%=image_pack_tag("no_image.jpg", size: "750x422", style: "padding:0;margin:0")%>
        <% end %>
      </div>
      <div style="padding-left: 50px; padding-top: 15px;">
        <div class="row">
          <% if @event.time > Time.now %>
            <h6 class="p-2 rounded-pill bg-success text-light">
              <%= octicon "flame" %> Active
            </h6>
          <% else %>
            <h6 class="p-2 rounded-pill bg-secondary text-light">
              <%= octicon "clock" %> End
            </h6> 
          <% end %>
          <h4 class="card-title" style="padding-left: 10px; padding-top: 3px;">
            <%=@event["title"] %>
          </h4>
          <% if !(Participant.where(event_id:@event[:id], role:1).empty?) && session[:current_user_id] == Participant.where(event_id:@event[:id], role:1).first.user_id %>
            <div style="margin-left: auto; margin-right: 0;">
              <%= button_to "/events/#{@event["id"]}/edit", method: :get, class:"btn btn-primary" do %>
                Edit
              <% end %>
            </div>
          <% end %>
        </div>
        <h6 class="card-subtitle text-muted" style="padding-top: 15px;">
          Time: <%=@event.time%>
        </h6>
        <h6 class="card-subtitle text-muted" style="padding-top: 15px;">
          Place: <%=@event.place%>
        </h6>
        <h6 class="card-subtitle text-muted" style="padding-top: 15px;">
          Price: $<%=@event.price%>
        </h6>
        <div style="padding-top: 20px;">
          <%=render 'gmap'%>
          <div id="googleMap" style="width:420px;height:273px;"></div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="card" style="padding: 30px;">
  <div class="row" style="padding-left: 15px; padding-right: 15px;">
    <h4 class="card-title">
      Description
    </h4>
    <% if @canBook %>
      <div style="margin-left: auto; margin-right: 0;">
        <% if @isBooked %>
          <%= button_to cancel_event_path(event_id: @event["id"]), method: :post, class:"btn btn-secondary"  do %>
            Cancel the book
          <% end %>
        <% else %>
          <%= button_to book_event_path(event_id: @event["id"]), method: :post, class:"btn btn-primary"  do %>
            Book this event
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
  <h6 style="padding-top: 10px;">
    <%=@event["description"] %>
  </h6>
</div>
