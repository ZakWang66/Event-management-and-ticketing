<section id="events">
    <a href="/events/new"><%= octicon "plus", id: "logo" %></a>
    <% if @events.empty? %>
        <br><h6>There is no tweet yet. Follow other users to see their new events by searching with the name. Or write your own events!</h6>
    <% else %>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <%= render 'sortTab' %> 
                    </li>
                    <li class="nav-item">
                        <%= render 'filter' %> 
                    </li>
                </ul>
                <div class = "my-2 my-lg-0">
                    <%= render 'search' %>
                </div>
            </div>
        </nav>
        <div id="events">
            <div class = "row">
                <%= render @events %>
            </div>
        <br>
        </div>
        <%= will_paginate @events %>
    <% end %>                                            
</section>


