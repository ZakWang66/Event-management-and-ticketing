<% provide(:title, 'Sign In') %>
<h1>Sign In</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: log_in_path) do |f| %>
      <div class="form-group row">
        <%= f.label :email, class: "col-sm-3"%>
        <div class="col-sm-9">
          <%= f.email_field :email %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :password, class: "col-sm-3" %>
        <div class="col-sm-9">
          <%= f.password_field :password %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-2"></div>
        <%= f.submit "Sign In", class: "btn btn-primary col-sm-6" %>
      </div>
    <% end %>
  </div>
</div>
<p> New user? <%= link_to "Sign Up now!", new_user_path %></p>
<div class="row">
  <%= link_to "Sign in with Google", '/auth/google_oauth2', class:'nav-link' %>
</div>