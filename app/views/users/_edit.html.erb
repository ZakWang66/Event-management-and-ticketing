<%= form_for( @user, method: "patch", remote: true, url: "/users/#{params[:id]}?field_type=#{params[:field_type]}" ) do |f| %>
    <div class="form-group">
        <% case params[:field_type]%>
        <% when "email" %>
            <%= f.email_field :email, class: "form-control"%>
        <% when "password" %>
            <%= f.label :password %>
            <%= f.password_field :password, class: "form-control" %>
            <%= f.label :password_confirmation, "Confirmation" %>
            <%= f.password_field :password_confirmation, class: "form-control" %>
        <% when "portrait" %>
            <%= f.file_field :portrait %>
        <% else %>
            <%= f.text_field params[:field_type], class: "form-control" %>
        <% end %>
    </div>
    <div class="form-group row">
        <div class="col-1"></div>
        <%= f.submit "Save", class: "btn btn-primary col" %>
        <div class="col-1"></div>
        <%= f.submit "Cancel", class: "btn btn-danger col" %>
        <div class="col-1"></div>
    </div>
<% end %>