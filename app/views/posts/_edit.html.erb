<div class="card-footer">
<%= form_for( @post , method: "patch", remote: true) do |f| %>
  <div class="form-group row">
    <%= f.label :title, class: "col-form-label col-sm-2" %>
    <%= f.text_field :title, class: "col-sm-9" %>
  </div>
  <div class="form-group row">
    <%= f.label :content, class: "col-form-label  col-sm-2" %>
    <%= f.text_area :content, class:" col-sm-9 form-control" %>
  </div>
  <div class="form-group justify-content-end row">
    <%= f.submit "Save", class: "btn btn-primary" %>
     &nbsp &nbsp
    <%= f.submit "Cancel", class: "btn btn-danger" %>
    <div class="col-1"></div>
  </div>
<% end %>
</div>