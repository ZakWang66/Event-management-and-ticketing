<br>
<div class="row justify-content-center">
    <button type="button" class="btn btn-success col-4" data-toggle="modal" data-target="#new_post">New</button>
</div>
<!-- Modal -->
<div class="modal fade" id="new_post" tabindex="-1" role="dialog" aria-labelledby="new_post_label" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <%= form_for( :post, url: '/posts', remote: true ) do |f| %>
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="new_post_label">Edit post</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group row">
                        <%= f.label :title, class: "col-form-label col-sm-2" %>
                        <%= f.text_field :title, class: "col-sm-8" %>
                    </div>
                    <div class="form-group row">
                        <%= f.label :content, class: "col-form-label  col-sm-2" %>
                        <%= f.text_area :content, class:" col-sm-8 form-control" %>
                    </div>
                    <%= f.hidden_field :event_id, value: @event.id %>
                    <%= f.hidden_field :user_id, value: current_user.id %>
                </div>
                <div class="modal-footer">
                    <div class="form-group text-right">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        &nbsp &nbsp
                        <%= f.submit "Post", class: "btn btn-primary" %>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</div>